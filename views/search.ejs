<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8">
  <title>ВўЂьЎћ/вдгви░ Ж▓ђВЃЅ</title>
  <link rel="stylesheet" href="/search.css">
</head>
<body>
  <div class="search-wrapper">
    <div class="search-top-bar">
            <!-- ьЎѕ в▓ёьі╝ -->
            <a href="/board">
              <button class="return-button">ьЎѕВю╝вАю</button>
            </a>
      <!-- Ж▓ђВЃЅВ░й -->
      <form class="search-bar" action="/search" method="GET">
        <input type="text" name="query" id="search-input" placeholder="ВўЂьЎћ ВаювфЕ Ж▓ђВЃЅ" value="<%= keyword %>" required>
        <button type="submit" class="search-button">Ж▓ђВЃЅ</button>
      </form>
    </div>

    <!-- ВўЂьЎћ Ж▓ђВЃЅ Ж▓░Ж│╝ -->
    <section id="movie-section">
      <h2>­Ъјг ВўЂьЎћ Ж▓ђВЃЅ Ж▓░Ж│╝</h2>
      <div class="card-list">
        <% if (movies.length === 0) { %>
          <p>Ж▓ђВЃЅвљю ВўЂьЎћЖ░ђ ВЌєВіхвІѕвІц.</p>
        <% } else { %>
          <% movies.forEach(movie => { %>
            <div class="card">
              <div class="card-content">
                <h3><%= movie.title %></h3>
                <!--ВўЂьЎћ ьЈЅВаљ-->
                <% if (movie.average_rating != null && movie.average_rating !== undefined && typeof movie.average_rating === 'number') { %>
                  <p><b>ьЈЅЖиа ьЈЅВаљ: <%= movie.average_rating.toFixed(1) %></b></p>
                <% } else { %>
                  <p><b>ьЈЅВаљ ВаЋв│┤ ВЌєВЮї</b></p>
                <% } %>
                <p>Ж░љвЈЁ: <%= movie.director || 'ВаЋв│┤ ВЌєВЮї' %></p>
                <p>ВъЦвЦ┤: <%= movie.genres || 'ВаЋв│┤ ВЌєВЮї' %></p>
                <p>Ж░юв┤ЅВЮ╝: <%= movie.release_date ? movie.release_date.toISOString().split('T')[0] : 'ВаЋв│┤ ВЌєВЮї' %></p>
              </div>
            </div>
          <% }) %>
        <% } %>
      </div>
    </section>


    <!-- вдгви░ Ж▓ђВЃЅ Ж▓░Ж│╝ -->
<section id="review-section">
  <div style="display: flex; justify-content: space-between; align-items: center;">
    <h2>­ЪЊЮ Ж┤ђвае вдгви░</h2>
    <form id="sort-form" action="/search" method="GET">
      <input type="hidden" name="query" value="<%= keyword %>">
      <select name="sort" id="sort-select" class="sort-dropdown">
        <option value="">-- ВаЋваг ВёаьЃЮ --</option>
        <option value="high" <%= sort === 'high' ? 'selected' : '' %>>вєњВЮђ ьЈЅВаљВѕю</option>
        <option value="low" <%= sort === 'low' ? 'selected' : '' %>>вѓ«ВЮђ ьЈЅВаљВѕю</option>
      </select>
    </form>
  </div>

  <div class="card-list">
    <% if (reviews.length === 0) { %>
      <p>Ж┤ђвае вдгви░Ж░ђ ВЌєВіхвІѕвІц.</p>
    <% } else { %>
      <% reviews.forEach(review => { %>
        <div class="card">
          <div class="card-content">
            <h3><%= review.title %></h3>
            <p><%= review.username %>вІўВЮў ьЈЅЖ░ђ: <%= review.rating %>Ваљ</p>
            <p><%= review.content %></p>
            <p><%= new Date(review.created_at).toLocaleString() %></p>
            <a href="/board/<%= review.review_id %>">Рєњ вдгви░ в│┤вЪгЖ░ђЖИ░</a>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>
</section>

<script>
  document.getElementById('sort-select').addEventListener('change', function () {
    document.getElementById('sort-form').submit();
  });
</script>



</body>
</html>